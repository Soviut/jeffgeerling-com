{
    "name": "drupal/recommended-project",
    "description": "Project template for Drupal 8 projects with a relocated document root",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "~1.0",
        "drupal/admin_toolbar": "^2.0",
        "drupal/cleantalk": "^3.5",
        "drupal/codefilter": "1.x-dev",
        "drupal/config_split": "^1.4",
        "drupal/core-composer-scaffold": "^8.8",
        "drupal/core-project-message": "^8.8",
        "drupal/core-recommended": "^8.8",
        "drupal/facets": "^1.4",
        "drupal/gin": "^3.0",
        "drupal/honeypot": "^2.0",
        "drupal/insert": "^2.0",
        "drupal/markdown": "^1.3",
        "drupal/pathauto": "^1.6",
        "drupal/redirect": "^1.5",
        "drupal/search_api_solr": "^4.0",
        "drupal/simple_mail": "^2",
        "drupal/simple_sitemap": "^3.6",
        "drush/drush": "^9.0"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.6.2",
        "drupal/coder": "^8.3",
        "drupal/devel": "^2.1"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "excludes": [
                ".htaccess"
            ],
            "file-mapping": {
                "[web-root]/.htaccess": false,
                "[web-root]/sites/development.services.yml": {
                    "append": "patches/development-services-yml-append.txt"
                }
            }
        },
        "patches": {
            "drupal/cleantalk": {
                "Drupal 8 version doesn't account for reverse_proxy settings": "https://www.drupal.org/files/issues/2020-06-06/3143365-10-helper-ip-get.patch"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
        }
    }
}
